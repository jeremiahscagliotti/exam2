<!DOCTYPE html>
<html>
<head>
  <title>Exam2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if flash[:errors] %>
		<% flash[:errors].each do |i| %>
			<p><%= i %></p>
		<% end %>
	<% end %>

	<% if current_user %>
		<a href="/session" data-method="delete">Log out</a>
	<% end %>
<%= yield %>

</body>
</html>
